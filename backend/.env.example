# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/echotwin

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Deepgram API (REQUIRED for transcription)
# Get API key from: https://deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Recall.ai Meeting Bot API (REQUIRED for bot functionality)
# Get credentials from: https://www.recall.ai
# Supports: Zoom, Google Meet, Microsoft Teams, Webex, Slack Huddles
# Create an account and generate an API key from the dashboard
RECALL_API_KEY=your_recall_api_key_here
RECALL_REGION=us-west-2  # Options: us-west-2, us-east-1, eu-central-1, ap-northeast-1

# ElevenLabs API (for voice cloning/TTS)
# Get API key from: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Gemini API (for AI summaries)
GEMINI_API_KEY=your_openrouter_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080
