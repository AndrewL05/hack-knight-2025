# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/echotwin

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Deepgram API (REQUIRED for transcription)
# Get API key from: https://deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Zoom Meeting SDK (REQUIRED for bot functionality)
# Get credentials from: https://marketplace.zoom.us
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_SDK_KEY=your_zoom_sdk_key
ZOOM_SDK_SECRET=your_zoom_sdk_secret

# ElevenLabs API (for voice cloning/TTS)
# Get API key from: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenRouter / Gemini API (for AI summaries)
# Get API key from: https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080
